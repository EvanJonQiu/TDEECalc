<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="$string:customTargetTitle"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_size="80px"
        ohos:text_alignment="center"
        ohos:bottom_margin="10vp"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:customProteinTitle"/>
        <TextField
            ohos:id="$+id:custom_protein_set"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:background_element="$graphic:background_text_field"
            ohos:text_input_type="pattern_number"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:customFatTitle"
            />
        <TextField
            ohos:id="$+id:custom_fat_set"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:background_element="$graphic:background_text_field"
            ohos:text_input_type="pattern_number"/>
    </DirectionalLayout>
    <Button
        ohos:id="$+id:calc_custom_goal"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:text_size="20fp"
        ohos:background_element="$graphic:background_calc_bmr"
        ohos:text="$string:calcEveryDayBtnTitle"
        ohos:margin="10vp"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:proteinTitle"/>
        <TextField
            ohos:id="$+id:custom_protein"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:enabled="false"
            ohos:background_element="$graphic:background_target_item_ret_field"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:fatTitle"/>
        <TextField
            ohos:id="$+id:custom_fat"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:enabled="false"
            ohos:background_element="$graphic:background_target_item_ret_field"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:carbTitle"/>
        <TextField
            ohos:id="$+id:custom_carb"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:enabled="false"
            ohos:background_element="$graphic:background_target_item_ret_field"/>
    </DirectionalLayout>
</DirectionalLayout>