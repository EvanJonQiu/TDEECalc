<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <Text
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:text="$string:everyTimeTargetTitle"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_size="80px"
        ohos:text_alignment="center"
        ohos:bottom_margin="10vp"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:proteinTitle"/>
        <TextField
            ohos:id="$+id:normal_protein"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:background_element="$graphic:background_target_item_ret_field"
            ohos:enabled="false"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:fatTitle"/>
        <TextField
            ohos:id="$+id:normal_fat"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:enabled="false"
            ohos:background_element="$graphic:background_target_item_ret_field"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="400vp"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <Text
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:text_size="40px"
            ohos:text="$string:carbTitle"/>
        <TextField
            ohos:id="$+id:normal_carb"
            ohos:height="match_content"
            ohos:width="200vp"
            ohos:multiple_lines="false"
            ohos:margin="10vp"
            ohos:padding="10vp"
            ohos:min_height="44vp"
            ohos:text_size="40px"
            ohos:layout_alignment="center"
            ohos:text_alignment="horizontal_center"
            ohos:enabled="false"
            ohos:background_element="$graphic:background_target_item_ret_field"/>
    </DirectionalLayout>
</DirectionalLayout>