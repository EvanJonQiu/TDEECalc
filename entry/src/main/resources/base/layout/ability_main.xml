<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <ScrollView
        ohos:height="600vp"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:orientation="vertical">
            <Text
                ohos:id="$+id:text_helloworld"
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_main"
                ohos:text="$string:bmrTitle"
                ohos:hint="$string:bmrTitleHint"
                ohos:text_size="80px"
                ohos:text_alignment="center"
                ohos:bottom_margin="10vp"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="horizontal">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="$string:genderTitle"
                    ohos:text_size="40px"/>
                <RadioContainer
                    ohos:id="$+id:genderRadio"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:orientation="horizontal"
                    ohos:layout_alignment="horizontal_center">
                    <RadioButton
                        ohos:id="$+id:gender_man"
                        ohos:height="20vp"
                        ohos:width="match_content"
                        ohos:text_size="40px"
                        ohos:text_color_on="#00BFFF"
                        ohos:text_color_off="#808080"
                        ohos:text="$string:genderManTitle"/>
                    <RadioButton
                        ohos:id="$+id:gender_woman"
                        ohos:height="20vp"
                        ohos:width="match_content"
                        ohos:text_size="40px"
                        ohos:text_color_on="#00BFFF"
                        ohos:text_color_off="#808080"
                        ohos:text="$string:genderWomanTitle"/>
                </RadioContainer>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:orientation="vertical"
                ohos:alignment="center">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:orientation="horizontal"
                    ohos:alignment="center">
                    <Text
                        ohos:height="match_content"
                        ohos:width="60vp"
                        ohos:text_size="40px"
                        ohos:text="$string:ageTitle"/>
                    <TextField
                        ohos:id="$+id:user_age"
                        ohos:height="match_content"
                        ohos:width="200fp"
                        ohos:multiple_lines="false"
                        ohos:margin="10vp"
                        ohos:padding="10vp"
                        ohos:min_height="44vp"
                        ohos:text_size="40px"
                        ohos:layout_alignment="center"
                        ohos:text_alignment="center"
                        ohos:background_element="$graphic:background_text_field"
                        ohos:text_input_type="pattern_number"
                        ohos:hint="请输入您的年龄"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="300vp"
                    ohos:orientation="horizontal"
                    ohos:alignment="center">
                    <Text
                        ohos:height="match_content"
                        ohos:width="60vp"
                        ohos:text_size="40px"
                        ohos:text="$string:heightTitle"/>
                    <TextField
                        ohos:id="$+id:user_height"
                        ohos:height="match_content"
                        ohos:width="200fp"
                        ohos:multiple_lines="false"
                        ohos:margin="10vp"
                        ohos:padding="10vp"
                        ohos:min_height="44vp"
                        ohos:text_size="40px"
                        ohos:layout_alignment="center"
                        ohos:text_alignment="horizontal_center"
                        ohos:background_element="$graphic:background_text_field"
                        ohos:text_input_type="pattern_number"
                        ohos:hint="请输入您的身高"/>
                </DirectionalLayout>
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="300vp"
                    ohos:orientation="horizontal"
                    ohos:alignment="center">
                    <Text
                        ohos:height="match_content"
                        ohos:width="60vp"
                        ohos:text_size="40px"
                        ohos:text="$string:weightTitle"/>
                    <TextField
                        ohos:id="$+id:user_weight"
                        ohos:height="match_content"
                        ohos:width="200fp"
                        ohos:multiple_lines="false"
                        ohos:margin="10vp"
                        ohos:padding="10vp"
                        ohos:min_height="44vp"
                        ohos:text_size="40px"
                        ohos:layout_alignment="center"
                        ohos:text_alignment="horizontal_center"
                        ohos:background_element="$graphic:background_text_field"
                        ohos:text_input_type="pattern_number"
                        ohos:hint="请输入您的体重"/>
                </DirectionalLayout>
                <Text
                    ohos:id="$+id:bmrRet"
                    ohos:height="40vp"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:background_ret_text_field"
                    ohos:text_size="50px"
                    ohos:text_alignment="center"/>
                <Button
                    ohos:id="$+id:calc_bmr"
                    ohos:height="50vp"
                    ohos:width="match_parent"
                    ohos:text_size="20fp"
                    ohos:background_element="$graphic:background_calc_bmr"
                    ohos:text="$string:bmrBtnTitle"
                    ohos:margin="10vp"/>
            </DirectionalLayout>
            <Text
                ohos:id="$+id:text_tedd"
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_main"
                ohos:text="$string:tdeeTitle"
                ohos:hint="$string:tdeeTitleHint"
                ohos:text_size="80px"
                ohos:text_alignment="center"
                ohos:top_margin="10vp"
                ohos:bottom_margin="10vp"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="vertical">
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="$string:exerciseRateTitle"
                    ohos:text_size="40px"
                    ohos:text_alignment="center"/>
                <Picker
                    ohos:id="$+id:exerciseRate"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:normal_text_size="40px"
                    ohos:selected_text_size="40px"/>
                <Text
                    ohos:id="$+id:tdeeRet"
                    ohos:height="40vp"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:background_ret_text_field"
                    ohos:text_size="50px"
                    ohos:text_alignment="center"/>
                <Button
                    ohos:id="$+id:calc_tdee"
                    ohos:height="50vp"
                    ohos:width="match_parent"
                    ohos:text_size="20fp"
                    ohos:background_element="$graphic:background_calc_bmr"
                    ohos:text="$string:tdeeBtnTitle"
                    ohos:margin="10vp"/>
            </DirectionalLayout>
            <Text
                ohos:id="$+id:text_target"
                ohos:height="60vp"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_ability_main"
                ohos:text="$string:targetTitle"
                ohos:text_size="80px"
                ohos:text_alignment="center"
                ohos:top_margin="10vp"
                ohos:bottom_margin="10vp"/>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center">
                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:alignment="center"
                    ohos:orientation="horizontal">
                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="$string:targetRadioTitle"
                        ohos:text_size="40px"/>
                    <RadioContainer
                        ohos:id="$+id:target_type"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:orientation="horizontal"
                        ohos:layout_alignment="horizontal_center">
                        <RadioButton
                            ohos:id="$+id:execiseGoal_fatloss"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text_size="40px"
                            ohos:text="$string:fatLossTitle"/>
                        <RadioButton
                            ohos:id="$+id:execiseGoal_maintenance"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text_size="40px"
                            ohos:text="$string:maintainTitle"/>
                        <RadioButton
                            ohos:id="$+id:execiseGoal_muscleGainz"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text_size="40px"
                            ohos:text="$string:muscleGainzTitle"/>
                    </RadioContainer>
                </DirectionalLayout>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="$string:eatTimeTitle"
                    ohos:text_size="40px"/>
                <Picker
                    ohos:id="$+id:eatTimes"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:normal_text_size="40px"
                    ohos:selected_text_size="40px"/>
                <Text
                    ohos:id="$+id:targetTdeeRet"
                    ohos:height="40vp"
                    ohos:width="match_parent"
                    ohos:background_element="$graphic:background_ret_text_field"
                    ohos:text_size="50px"
                    ohos:text_alignment="center"/>
                <Button
                    ohos:id="$+id:calc_target_tdee"
                    ohos:height="50vp"
                    ohos:width="match_parent"
                    ohos:text_size="20fp"
                    ohos:background_element="$graphic:background_calc_bmr"
                    ohos:text="$string:calcTargetBtn"
                    ohos:margin="10vp"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="horizontal"
                ohos:top_margin="10vp">
                <Button
                    ohos:id="$+id:to_normal_target"
                    ohos:height="50vp"
                    ohos:width="150vp"
                    ohos:text_size="20fp"
                    ohos:background_element="$graphic:background_calc_bmr"
                    ohos:text="$string:normalTargetTitle"
                    ohos:margin="10vp"/>
                <Button
                    ohos:id="$+id:to_custom_target"
                    ohos:height="50vp"
                    ohos:width="150vp"
                    ohos:text_size="20fp"
                    ohos:background_element="$graphic:background_calc_bmr"
                    ohos:text="$string:customTargetTitle"
                    ohos:margin="10vp"/>
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>